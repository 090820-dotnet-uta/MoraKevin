@model P1.Models.Customer

@{
    ViewData["Title"] = "CustomerHome";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h1>Welcome @Html.DisplayFor(model => model.FirstName) !</h1>

<div>
    <hr />
    <p>Pick an option from the above menu or search a customer by name.</p>
</div>
<div class="col-md-4">
    <form asp-controller="CustomerHome" asp-action="SearchCustomer">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">First Name</label>
            <input asp-for="FirstName" placeholder="first name" value="" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Last Name</label>
            <input asp-for="LastName" placeholder="last name" value="" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Search Customer" class="btn btn-primary" />
        </div>
    </form>
</div>