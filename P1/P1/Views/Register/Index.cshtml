@model P1.Models.UserAccount

@{
    ViewData["Title"] = "Index";
}

<h1>Create a new account</h1>

<h4>Please enter a username and password</h4>
<hr />
<p>@ViewData["fieldEmpty"]</p>
<p>@ViewData["usernameTaken"]</p>
<p>@ViewData["passwordsDifferent"]</p>
<p>@ViewData["usernameTooShort"]</p>
<p>@ViewData["passTooShort"]</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="TryRegister">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" placeholder="username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" placeholder="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Verify Password</label>
                <input input type="text" id="password2" name="password2" placeholder="verify password" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
