@model P1.Models.ProductInStock

@{
    ViewData["Title"] = "AddToCart";
    Layout = "~/Views/Shared/_StoreHomeLayout.cshtml";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>

<div>
    <h4>How many would you like?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            In Stock
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Max)
        </dd>
        <dt class="col-sm-2">
            Quanitity
        </dt>
        <dd class="col-sm-10">
            <form asp-action="PlaceInCart">
                <div class="form-inline">
                    <input asp-for="Quantity" type="number" id="quantity" name="quantity" value ="1" min="1" max="@Html.DisplayFor(model => model.Max)" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Add to Cart" class="btn btn-primary" />
                </div>
            </form>
        </dd>
    </dl>
</div>
