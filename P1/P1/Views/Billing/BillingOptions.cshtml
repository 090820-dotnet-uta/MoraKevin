@model IEnumerable<P1.Models.Billing>

@{
    ViewData["Title"] = "BillingOptions";
    Layout = "~/Views/Shared/_StoreHomeLayout.cshtml";
}

<h1>Billing Options</h1>
<p>Choose a saved card or add a new card to continue checkout.</p>
<p>Your saved cards:</p> 
<table class="table">
    <thead>
        <tr>
            <th>
                Name on Card
            </th>
            <th>
                Card Number
            </th>
            <th>
                Expiration Month
            </th>
            <th>
                Expiration Year
            </th>
            <th>
            </th>
            @*<th>
        </th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameOnCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationYear)
            </td>
            <td>
                | <a asp-controller="Billing" asp-action="UseCard" asp-route-id="@item.BillingID">Choose Card</a> |
            </td>
            @*<td>
            <a asp-controller="Billing" asp-action="Edit" asp-route-id="@item.BillingID">Edit</a> |
            <a asp-controller="Billing" asp-action="Details" asp-route-id="@item.BillingID">Details</a> |
            <a asp-controller="Billing" asp-action="Delete" asp-route-id="@item.BillingID">Delete</a>
        </td>*@
        </tr>
}
    </tbody>
</table>
<br />
<p>
    Or:
</p>
<p>
    <a asp-controller="Billing" asp-action="Create">Add New Card</a>
</p>
